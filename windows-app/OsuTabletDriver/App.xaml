<Application x:Class="OsuTabletDriver.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!-- Color Palette -->
                    <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
                    <SolidColorBrush x:Key="SecondaryColor" Color="#9C27B0"/>
                    <SolidColorBrush x:Key="BackgroundColor" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="SurfaceColor" Color="#2D2D2D"/>
                    <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="TextSecondaryColor" Color="#AAAAAA"/>
                    <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
                    
                    <!-- Button Style -->
                    <Style x:Key="ModernButton" TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
